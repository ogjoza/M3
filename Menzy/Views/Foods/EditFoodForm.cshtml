@using System.Web.UI.WebControls
@using Antlr.Runtime
@using AutoMapper.Internal
@using AutoMapper.Mappers
@using Menzy.Models
@using Microsoft.Ajax.Utilities
@model Menzy.ViewModels.FoodFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <style>
        .dropbtn {
            background-color: #00bc8c;
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #00bc8c;
        }
    </style>
</head>

<h2>New food</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Save", "Foods"))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Food.Name)
                    @Html.TextBoxFor(m => m.Food.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Food.Name)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Food.Price)
                    @Html.TextBoxFor(m => m.Food.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Food.Price)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Food.NumberInStock)
                    @Html.TextBoxFor(m => m.Food.NumberInStock, new { @class = "form-control" })
                </div>
                <div>
                    @Html.LabelFor(m => m.Food.TipHrane)
                    @Html.DropDownListFor(model => model.Food.TipHrane, new SelectList(new List<Object> { new { value = "Predjelo", text = "Predjelo" }, new { value = "Glavno jelo", text = "Glavno jelo" }, new { value = "Desert", text = "Desert" }, new { value = "Piće", text = "Piće" } }, "value", "text", Model.Food), new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Food.Kalorije)
                    @Html.TextBoxFor(m => m.Food.Kalorije, new { @class = "form-control" })


                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Food.Masti)
                    @Html.TextBoxFor(m => m.Food.Masti, new { @class = "form-control" })


                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Food.Sol)
                    @Html.TextBoxFor(m => m.Food.Sol, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Food.UHidrati)
                    @Html.TextBoxFor(m => m.Food.UHidrati, new { @class = "form-control" })


                </div>

                @Html.HiddenFor(m => m.Food.Id)
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">Save</button>
            }
        </div>
    </div>
</div>



