@using Menzy.Models
@model IEnumerable<Menzy.Models.Food>

<head>
    <style>
        .button {
            display: inline-block;
            border-radius: 4px;
            background-color: #00bc8c;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 20px;
            padding: 20px;
            width: 200px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

            .button span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .button span:after {
                    content: '\00bb';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: -0px;
                    transition: 0.5s;
                }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }
    </style>
</head>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Foods</h2>
<button onclick="location.href='@Url.Content("~/Foods/New")'" class="button" type="button" style="vertical-align:middle"><span>Novi food </span></button>


    <table id="foods" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Hrana</th>
                <th>Tip hrane</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    @section scripts
    {
        <script>
            $(document).ready(function() {
                var table = $("#foods").DataTable({
                    ajax: {
                        url: "/api/foods",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function(data, type, food) {
                                return "<a href='/foods/edit/" + food.id + "'>" + food.name + "</a>";
                            }
                        },
                        {
                            data: "tipHrane"
                        },
                        {
                            data: "id",
                            render: function(data) {
                                return "<button class='btn-link js-delete' data-food-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });
                $("#foods").on("click",
                    ".js-delete",
                    function() {
                        var button = $(this);
                        bootbox.confirm("Are you sure you want to delete this food?",
                            function(result) {
                                if (result) {
                                    $.ajax({
                                        url: "/api/foods/" + button.attr("data-food-id"),
                                        method: "DELETE",
                                        success: function() {
                                            table.row(button.parents("tr")).remove().draw();
                                        }
                                    });
                                }
                            });
                    });
            });
        </script>
    }
